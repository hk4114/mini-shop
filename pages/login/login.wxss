page {
  background-color: white;
}

page .divider-line {
  width: 100%;
  height: 20rpx;
  background-color: #f5f5f5;
}

.top-tips {
  padding-top: 64rpx;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
}

.top-tips-title {
  font-weight: bold;
  font-size: 32rpx;
}

.logo-wrapper {
  flex-shrink: 0;
  position: relative;
  width: 320rpx;
  height: 320rpx;
  text-align: center;
  margin: 0 auto;
  padding: 40rpx 0 80rpx;
}

.logo {
  display: block;
  background-color: #f5f5f5;
  border-radius: 50%;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.item {
  margin: 0 auto;
  border: 1px solid #cccccc;
  height: 40px;
  width: 90%;
  border-radius: 3px;
  background-color: #ffffff;
  margin-bottom: 15px;
}

.item input {
  height: 40px;
  line-height: 40px;
  margin-left: 10px;
}

.holder {
  font-size: 14px;
  color: #999999;
}

.flex {
  display: flex;
  flex-direction: row;
}

.flex input {
  width: 300px;
}

.item switch {
  margin-top: 5px;
  margin-right: 5px;
}

.mobileInfo {
  display: flex;
  flex-direction: row;
}

.mobile {
  margin: 0 auto;
  border: 1px solid #cccccc;
  height: 40px;
  width: 50%;
  border-radius: 3px;
  background-color: #ffffff;
  margin-bottom: 15px;
  display: flex;
  flex-direction: row;
  margin-left: 5%;
}

.mobile input {
  margin-top: 8px;
  margin-left: 10px;
}

.code {
  height: 40px;
  width: 35%;
  border-radius: 3px;
  text-align: center;
  margin-left: 10px;
  line-height: 40px;
  font-size: 15px;
  margin-bottom: 15px;
  margin-right: 5%;
}

.btn {
  width: 80%;
  margin-top: 40px;
}

.block {
  width: 176rpx;
  height: 176rpx;
  background: #fff;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
}

.block--top {
  width: 100vw;
  height: 35vh;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}

.btn-wrapper {
  flex-shrink: 0;
  position: relative;
  width: 480rpx;
  text-align: center;
  margin: 0 auto;
}

.login-btn {
  background-color: #fda552 !important;
  border-color: #fda552 !important;
}

.w480 {
  width: 480rpx;
}

.login-tips {
  color: #959595;
  font-size: 24rpx;
  padding: 56rpx;
}

.login-dialog-btn-wrap {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}

.dialog-tips {
  margin-bottom: 72rpx;
}

.dialog-btn {
  width: 50%;
  border-radius: 0 !important;
}

.left-btn {
  border-bottom-left-radius: 16rpx !important;
}

.right-btn {
  border-bottom-right-radius: 16rpx !important;
}